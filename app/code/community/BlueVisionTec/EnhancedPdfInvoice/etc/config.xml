<?xml version="1.0"?>
<config>
  <modules>
    <BlueVisionTec_EnhancedPdfInvoice>
      <version>0.1.1</version>
    </BlueVisionTec_EnhancedPdfInvoice>
  </modules>
  
  <global>       
    <models>
      <enhancedpdfinvoice>
          <class>BlueVisionTec_EnhancedPdfInvoice_Model</class>
      </enhancedpdfinvoice>
      <core>
        <rewrite>
          <email_template_mailer>BlueVisionTec_EnhancedPdfInvoice_Model_Core_Email_Template_Mailer</email_template_mailer>
        </rewrite>
      </core>
      <sales>
        <rewrite>
          <order_pdf_invoice>BlueVisionTec_EnhancedPdfInvoice_Model_Sales_Order_Pdf_Invoice</order_pdf_invoice>
		  <order_pdf_creditmemo>BlueVisionTec_EnhancedPdfInvoice_Model_Sales_Order_Pdf_Creditmemo</order_pdf_creditmemo>
          <order_pdf_items_invoice_default>BlueVisionTec_EnhancedPdfInvoice_Model_Sales_Order_Pdf_Items_Invoice_Default</order_pdf_items_invoice_default>
		  <order_pdf_items_creditmemo_default>BlueVisionTec_EnhancedPdfInvoice_Model_Sales_Order_Pdf_Items_Creditmemo_Default</order_pdf_items_creditmemo_default>
          <order_pdf_total_default>BlueVisionTec_EnhancedPdfInvoice_Model_Sales_Order_Pdf_Total_Default</order_pdf_total_default>
          <order_invoice>BlueVisionTec_EnhancedPdfInvoice_Model_Sales_Order_Invoice</order_invoice>
        </rewrite>
      </sales>
      <tax>
        <rewrite>
          <sales_pdf_tax>BlueVisionTec_EnhancedPdfInvoice_Model_Tax_Sales_Pdf_Tax</sales_pdf_tax>
        </rewrite>
      </tax>
      <bundle>
        <rewrite>
          <sales_order_pdf_items_invoice>BlueVisionTec_EnhancedPdfInvoice_Model_Bundle_Sales_Order_Pdf_Items_Invoice</sales_order_pdf_items_invoice>
        </rewrite>
      </bundle>
    </models>
    <blocks>
      <enhancedpdfinvoice>
        <class>BlueVisionTec_EnhancedPdfInvoice_Block</class>
      </enhancedpdfinvoice>
    </blocks>
    <helpers>
      <enhancedpdfinvoice>
        <class>BlueVisionTec_EnhancedPdfInvoice_Helper</class>
      </enhancedpdfinvoice>
    </helpers>
  </global>
  
  <frontend>
    <translate>
      <modules>
        <enhancedpdfinvoice>
          <files>
            <default>BlueVisionTec_EnhancedPdfInvoice.csv</default>
          </files>
        </enhancedpdfinvoice>
      </modules>
    </translate>
  </frontend>
  
  <adminhtml>
    <acl>
        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <bvt_enhancedpdfinvoice_config>
                                        <title>EnhancedPdfInvoice config</title>
                                    </bvt_enhancedpdfinvoice_config>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
    <translate>
      <modules>
        <enhancedpdfinvoice>
          <files>
            <default>BlueVisionTec_EnhancedPdfInvoice.csv</default>
          </files>
        </enhancedpdfinvoice>
      </modules>
    </translate>
  </adminhtml>
  
  <default>
    <bvt_enhancedpdfinvoice_config>
      <design_settings>
        <font_type>Helvetica</font_type>
      </design_settings>
      <item_settings>
        <tax_display>percent</tax_display>
      </item_settings>
    </bvt_enhancedpdfinvoice_config>
  </default>
</config>